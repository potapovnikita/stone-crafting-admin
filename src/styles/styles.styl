#app
  display flex
  width 100%
  height 100vh

*
  font-family "Montserrat", Helvetica, Arial, sans-serif;
  font-size 16px
  word-spacing 1px
  letter-spacing -0.011em
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  font-weight normal
  font-style normal

.app-container
  width 100%


.form_item__container
  margin-bottom 15px

.form_item__container.error
  color $light_red
  font-size 14px

.device_icon_head
  display inline-block
  margin-left 20px
  margin-right 20px

h1,
h1 a
  font-family "Nunito"
  font-size 40px
  font-style: normal
  font-weight bold
  font-stretch normal
  color $mid_gray

  a
    text-decoration underline
    cursor pointer
    &:hover
      text-decoration none



h2
  font-family "Nunito"
  font-size: 30px
  font-style: normal
  font-weight bold
  font-stretch normal

h3
  font-family "Nunito"
  font-size 24px
  font-style: normal
  font-weight bold
  font-stretch normal

h4
  font-family "Nunito"
  font-size 18px
  font-style: normal
  font-weight bold
  font-stretch normal

.default_text
  font-family "Nunito"
  font-size 20px
  font-style: normal
  font-stretch normal

.icon
  cursor pointer
  margin-right 4px

.icon.delete
  &:hover
    svg
      stroke $light_red

.icon.edit
  &:hover
    svg
      stroke $main_color_blue

.icon.confirm
  &:hover
    svg
      stroke $main_color_green

.icon.cancel
  &:hover
    svg
      stroke $light_red

.icon.add
  &:hover
    svg
      stroke $main_color_green



